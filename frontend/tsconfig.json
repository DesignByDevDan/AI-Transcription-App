{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./", // Base directory for module resolution
    "paths": {
      "@/*": ["src/*"] // Simplified alias for the entire src directory
    },

    /* JavaScript Support */
    "allowJs": true, // Allows including JavaScript files in the project

    /* Emit */
    "outDir": "./dist", // Output directory for compiled files (optional)
    "sourceMap": true, // Enables source maps for easier debugging

    /* Interop Constraints */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true, // Enables strict type-checking options
    "skipLibCheck": true // Skips type checking of declaration files for faster builds
  },
  "include": ["src"], // Includes all files in the src directory
  "exclude": ["node_modules", "dist"] // Excludes unnecessary directories
}
